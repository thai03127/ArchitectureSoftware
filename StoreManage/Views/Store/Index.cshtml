@model List<StoreManage.Models.Interface.Store>

<div class="container-fluid">
    <div class="container-fluid">
        <div class="card">
            <div class="card-body">
                @foreach (var store in Model)
                {
                <div class="row">
                    <div class="col-md-4">
                        <h5 class="card-title fw-semibold mb-4">@store.StoreName</h5>
                        <div class="card">
                                @if (store.StoreID == 1)
                                {
                                    <img src="~/images/products/s4.jpg" class="card-img-top" alt="~.">
                                }
                                else{
                                    <img src="~/images/products/hotelsaigon.jpg" class="card-img-top" alt="~.">
                                }
                            <div class="card-body">
                                <h5 class="card-title">Type: @store.ProductType</h5>
                                <p class="card-text"> @store.Description</p>
                                <strong class="card-title">@store.TotalPrice $/Month</strong>
                                <hr>
                                    <a class="btn btn-primary" asp-controller="Store" asp-action="OpenWeb" asp-route-web=@store.LinkWeb>Go somewhere</a>
                            </div>
                        </div>
                    </div>
                    <div class= "col-md-4">
                        @Html.Partial("OverviewPartial")
                            <div class="alert alert-success" role="alert">
                                <h2>Average Sales</h2>
                                <p>@ViewBag.AverageSales $</p>
                            </div>
                    </div>
                </div>
                }
